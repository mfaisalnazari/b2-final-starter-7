<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_discount_path(@merchant) %></p>

  <% @discounts.each do |discount| %>
    <div id="discount_<%= discount.id %>">
    <p><%= link_to "Discount ##{discount.id}", merchant_discount_path(@merchant, discount) %></p>
    <%= "Threshold #{discount.quantity}" %>
    <%= "Percentage #{discount.percentage}" %>
    <%= button_to "Delete Discount #{discount.id}", merchant_discount_path(@merchant, discount), method: :delete%>
    </div>
  <% end %>
</body>




